{
  "name": "roon-core-discord-rp",
  "version": "2.1.0",
  "description": "Discord Rich Presence powered by Roon Core Extension API",
  "main": "electron/main.js",
  "scripts": {
    "start": "node src/index.js",
    "gui": "node scripts/launch-gui.js",
    "gui:dev": "concurrently \"vite --config vite.config.js\" \"wait-on http://localhost:5173 && node scripts/launch-gui.js --dev\"",
    "gui:build": "vite build --config vite.config.js",
    "dist": "npm run gui:build && electron-builder --win dir"
  },
  "keywords": [
    "roon",
    "discord",
    "rich-presence"
  ],
  "author": "TubeBoyJimmy",
  "license": "MIT",
  "dependencies": {
    "js-yaml": "^4.1.0",
    "node-roon-api": "github:RoonLabs/node-roon-api",
    "node-roon-api-image": "github:RoonLabs/node-roon-api-image",
    "node-roon-api-status": "github:RoonLabs/node-roon-api-status",
    "node-roon-api-transport": "github:RoonLabs/node-roon-api-transport"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.4",
    "concurrently": "^9.2.1",
    "electron": "^35.7.5",
    "electron-builder": "^26.8.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "vite": "^7.3.1",
    "wait-on": "^9.0.4"
  },
  "build": {
    "appId": "com.rooncorerdp.discord",
    "productName": "RoonCoreDiscordRP",
    "directories": {
      "output": "release"
    },
    "files": [
      "electron/**/*",
      "src/**/*",
      "gui/dist/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      }
    ],
    "win": {
      "target": [
        "dir"
      ],
      "icon": "assets/icon.ico",
      "signAndEditExecutable": false
    }
  }
}
